---
import { Image } from "astro:assets";
import carrot from "@icons/carrot-white.svg";

const { qaObject } = Astro.props;
---

<div class="faq">
    {
        qaObject.map((qa) => (
            <details>
                <span>{qa.a}</span>
                <summary>
                    {qa.q}
                    <Image src={carrot} alt="dropdown" />
                </summary>
            </details>
        ))
    }
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    details {
        padding: 1rem;
        line-height: 2rem;
        background-color: var(--blue);
        color: white;
    }
    summary {
        display: flex;
        justify-content: space-between;
        font-family: "buttons";
        text-transform: uppercase;
        color: white;
        gap: 1rem;
        line-height: 1.6rem;
    }
    details[open] summary {
        margin-bottom: 1rem;
    }
    details[open] summary img {
        transform: rotate(180deg);
    }
    .faq {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    @media (min-width: 1024px) {
        details {
            cursor: pointer;
        }
    }
</style>
