---
import SubmitIcon from "@icons/submit-white.svg";
interface Props {
    type?: "dark" | "light";
}

const { type = "light" } = Astro.props;

const className = type;
---

<form action="" class={`form form-${type}`}>
    <div class="input-area">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required />
    </div>

    <div class="input-area">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" required />
    </div>

    <div class="input-area">
        <label for="phone">Phone</label>
        <input type="tel" name="phone" id="phone" required />
    </div>

    <div class="input-area">
        <label for="message">Message</label>
        <textarea rows="12" name="message" id="message" required></textarea>
    </div>

    <button><SubmitIcon />Submit Message</button>
</form>

<style>
    .form {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .input-area {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    input,
    textarea {
        font-size: 1em;
        padding: 0.5rem;
        font-family: "paragraph";
        border: none;
        border-bottom: 4px solid var(--blue);
    }

    button {
        display: flex;
        gap: 1rem;
        padding: 0.7rem 1.6rem 0.7rem 0.66rem;
        font-weight: 400;
        text-decoration: none;
        font-family: "buttons";
        box-shadow: var(--box-shadow);
        font-size: 1em;
        align-items: center;
        width: fit-content;
        box-shadow: var(--box-shadow);
        background-color: var(--blue);
        color: white;
        border: 1px solid var(--blue);
    }
    .form-dark textarea {
        border: 1px solid var(--blue);
        border-bottom: 4px solid var(--blue);
    }
    .form-dark input {
        border: 1px solid var(--blue);
        border-bottom: 4px solid var(--blue);
    }

    @media (min-width: 1024px) {
        button {
            transition: all 0.25s ease;
            cursor: pointer;
        }
        button:hover {
            background-color: #51c9fc;
        }
    }
</style>
