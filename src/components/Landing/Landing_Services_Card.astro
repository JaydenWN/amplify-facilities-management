---
import { Image } from "astro:assets";
import Button from "../common/Button.astro";
const { title, text, ctaText, image } = Astro.props;
import MessageIcon from "@icons/message-white.svg";
---

<div class="service-card">
    <Image src={image} alt="" class="image" />
    <div class="text-content">
        <h3>{title}</h3>
        <p>{text}</p>
        <Button href="/" type="primary"><MessageIcon /> Contact Us</Button>
    </div>
</div>

<style>
    .service-card {
        display: flex;
        width: 100%;
        flex-direction: column;
        background-color: var(--light-blue);
        box-shadow: var(--box-shadow);
    }
    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 2rem 1.6rem;
    }

    .image {
        height: 225px;
        width: 100%;
        object-fit: cover;
    }
    p {
        margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
        .service-card {
            width: calc(50% - 1rem);
            box-sizing: border-box;
        }
        .text-content {
            padding: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .service-card {
            flex-direction: row;
            width: 100%;
            max-width: 865px;
            margin: 0px auto;
        }
        .image {
            height: auto;
            width: 45%;
        }
        .text-content {
            padding: 3rem;
        }
    }
</style>
