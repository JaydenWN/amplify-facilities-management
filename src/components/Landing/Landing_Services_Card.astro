---
import { Image } from "astro:assets";
import Button from "../common/Button.astro";
const { title, text, ctaText, image } = Astro.props;
import MessageIcon from "@icons/message-white.svg";
---

<div class="service-card">
    <Image src={image} alt="" class="image" />
    <div class="text-content">
        <h3>{title}</h3>
        <p>{text}</p>
        <Button href="/" type="primary"><MessageIcon /> Contact Us</Button>
    </div>
</div>

<style>
    .service-card {
        display: flex;
        width: 100%;
        flex-direction: column;
        background-color: var(--light-blue);
        box-shadow: var(--box-shadow);
    }
    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 2rem 1.6rem;
    }

    .image {
        height: 225px;
        width: 100%;
        object-fit: cover;
    }
    p {
        margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
        .service-card {
            display: grid;
            box-sizing: border-box;
            grid-template-rows: subgrid;
            grid-row: span 4;
        }
        .text-content {
            display: contents;
        }
        .service-card h3 {
            margin: 1rem 1rem 0px 1rem;
        }
        .service-card p {
            margin: 0px 1rem;
        }
        .service-card :global(a) {
            margin: 1rem;
        }
    }

    @media (min-width: 1024px) {
        .service-card h3 {
            margin: 1rem 2rem 2rem 2rem;
        }
        .service-card p {
            margin: 0px 2rem;
        }
        .service-card :global(a) {
            margin: 2rem;
        }
    }

    @media (min-width: 1440px) {
        .service-card h3 {
            margin: 1rem 2rem 0px 2rem;
        }
    }
</style>
