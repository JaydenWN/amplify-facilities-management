---
import { Image } from "astro:assets";
import Button from "@components/common/Button.astro";
import heroImage from "@images/amplify-facilities-management-sydney.webp";
import CallIcon from "@icons/call-white.svg";
import MessageIcon from "@icons/message-white.svg";
---

<header>
    <Image src={heroImage} alt="title" class="hero-image" />
    <div class="container">
        <h1>Complete Building & Facilities Management Across Sydney</h1>
        <p>
            Amplify Facilities Management delivers reliable building and
            facilities services across Sydney. From cleaning and landscaping to
            security and full building management, we keep your property safe,
            clean, and running smoothly.
        </p>
        <div class="cta-buttons">
            <Button type="secondary" href="tel:"><CallIcon /> Call Us</Button>
            <Button type="primary" href="/contact"
                ><MessageIcon />Get a Free Quote Today</Button
            >
        </div>

        <style>
            header {
                position: relative;
            }
            .hero-image {
                position: absolute;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 1;
            }
            .container {
                position: relative;
                z-index: 2;
                display: flex;
                flex-direction: column;
                gap: 2rem;
                color: white;
            }
            h1 {
                font-size: 3em;
                color: white;
            }
            p {
                color: white;
            }

            .cta-buttons {
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
            }

            @media (min-width: 768px) {
                h1 {
                    width: 75%;
                }
                p {
                    width: 80%;
                }
                .container {
                    gap: 3rem;
                }
            }

            @media (min-width: 1024px) {
                .container {
                    gap: 4rem;
                }
                h1,
                p {
                    max-width: 600px;
                }
            }
        </style>
    </div>
</header>
