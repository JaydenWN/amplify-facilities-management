---
import ContactForm from "../common/Contact_Form.astro";
---

<section class="section-dark">
    <div class="container">
        <div class="contact-head">
            <h2>Contact Amplify Facilities Management in Sydney</h2>
            <p>
                Ready to simplify your property and building management? Get in
                touch with Amplify Facilities Management for tailored solutions
                across Sydney. Our team is here to answer your questions,
                provide quotes, and deliver the reliable support your property
                deserves.
            </p>
        </div>
        <div class="form">
            <ContactForm />
        </div>

        <div class="contact-information">
            <div class="info-header">
                <h3>Get in Touch Directly</h3>
            </div>

            <div class="info">
                <h4>Phone</h4>
                <a href="tel:0450 768 657">0450 768 657</a>
            </div>

            <div class="info">
                <h4>Email</h4>
                <a href="mailto:info@amplifyfm.com">info@amplifyfm.com</a>
            </div>
        </div>
    </div>
</section>

<style>
    h2 {
        margin-bottom: 2rem;
    }
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .contact-information {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 2rem;
    }
    .info-header {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    h4 {
        margin-bottom: 1rem;
    }
    a {
        text-decoration: none;
        color: black;
    }

    @media (min-width: 768px) {
        .contact-head {
            grid-area: contact-head;
        }
        .form {
            grid-area: form;
        }
        .contact-information {
            grid-area: info;
        }
        .container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-areas:
                "contact-head form"
                "info form";
            gap: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .container {
            gap: 6rem;
        }
        .form {
            max-width: 440px;
        }
    }
</style>
