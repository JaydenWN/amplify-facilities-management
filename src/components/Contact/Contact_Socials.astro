---
import FacebookIcon from "@icons/facebook-blue.svg";
import InstagramIcon from "@icons/instagram-blue.svg";
import LinkedInIcon from "@icons/linked-in-blue.svg";
---

<section>
    <div class="container">
        <h2>Connect With Amplify Facilities Management on Social Media</h2>
        <p>
            Stay up to date with the latest news, facility tips and project
            highlights from our Sydney team. Follow Amplify Facilities
            Management across our social channels to see how weâ€™re helping
            strata, commercial and industrial properties run smoothly every day.
        </p>

        <div class="cards">
            <div class="card">
                <FacebookIcon class="icon" />
                <div class="text">
                    <h3>Facebook</h3>
                    <a href="/">Updates, news and community projects</a>
                </div>
            </div>

            <div class="card">
                <LinkedInIcon class="icon" />
                <div class="text">
                    <h3>LinkedIn</h3>
                    <a href="/"
                        >Professional insights and facility management expertise</a
                    >
                </div>
            </div>

            <div class="card">
                <InstagramIcon class="icon" />
                <div class="text">
                    <h3>Instagram</h3>
                    <a href="/"
                        >Behind-the-scenes photos and project showcases</a
                    >
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .card {
        display: flex;
        gap: 1rem;
        padding: 1.2rem;
        border: 1px solid var(--blue);
        border-bottom: 4px solid var(--blue);
        box-shadow: var(--box-shadow);
    }
    .icon {
        width: 70px;
        height: auto;
        min-width: 70px;
    }
    .text {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    a {
        text-decoration: none;
        color: var(--font-color);
    }
</style>
