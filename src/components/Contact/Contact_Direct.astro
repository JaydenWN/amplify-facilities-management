---
import PhoneIcon from "@icons/phone-contact-white.svg";
import EmailIcon from "@icons/email-white.svg";
import ClockIcon from "@icons/hour-white.svg";
---

<section class="section-dark">
    <div class="container">
        <h2>Contact Amplify Facilities Management Directly</h2>
        <p>
            Prefer to speak with us straight away? Our Sydney team is ready to
            assist with building management, facilities maintenance, commercial
            cleaning, landscaping and CCTV security enquiries. Get in touch
            today and weâ€™ll make sure your property is in safe hands.
        </p>

        <div class="cards">
            <div class="card">
                <PhoneIcon />
                <div class="text">
                    <h3>Phone</h3>
                    <a href="tel:">0412 234 480</a>
                </div>
            </div>

            <div class="card">
                <EmailIcon />
                <div class="text">
                    <h3>Email</h3>
                    <a href="mailto:info@amplifyfm.com">info@amplifyfm.com</a>
                </div>
            </div>
        </div>

        <div class="contact-hours">
            <h2>Our Contact Hours</h2>

            <div class="cards">
                <div class="card">
                    <ClockIcon />
                    <div class="text">
                        <h3>monday - Friday</h3>
                        <p>7:00am - 6:00pm</p>
                    </div>
                </div>

                <div class="card">
                    <ClockIcon />
                    <div class="text">
                        <h3>Saturday</h3>
                        <p>By Appointment</p>
                    </div>
                </div>

                <div class="card">
                    <ClockIcon />
                    <div class="text">
                        <h3>Sunday</h3>
                        <p>Closed</p>
                    </div>
                </div>

                <div class="card">
                    <ClockIcon />
                    <div class="text">
                        <h3>Emergency Support</h3>
                        <p>24/7 Call-out service</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .card {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background-color: var(--blue);
        border-top: 6px solid white;
        box-shadow: var(--box-shadow);
        align-items: center;
    }
    .text {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }
    .card h3,
    a {
        color: white;
    }
    a {
        text-decoration: none;
    }
    .text > p {
        color: white;
    }

    .contact-hours {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 4rem;
    }
</style>
