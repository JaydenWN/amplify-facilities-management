---
import AboutAreas from "../components/About/About_Areas.astro";
import AboutWho from "../components/About/About_Who.astro";
import AboutWhy from "../components/About/About_Why.astro";
import AboutContact from "../components/About/About_Contact.astro";
import SubHero from "../components/common/Sub_Hero.astro";
import Layout from "../layouts/Base_Layout.astro";
---

<Layout
	title="About Amplify Facilities Management | Sydney’s Trusted Building & Cleaning Experts"
	description="Learn about Amplify Facilities Management, a Sydney team dedicated to professional building management, commercial cleaning, landscaping and security services across the metro region."
>
	<script slot="head" type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@graph": [
				{
					"@type": "AboutPage",
					"name": "About Amplify Facilities Management",
					"url": "https://amplifyfm.com.au/about-amplify-facilities-management-sydney",
					"description": "Learn about Amplify Facilities Management, a trusted Sydney-based company delivering building management, commercial cleaning, landscaping and security services."
				},
				{
					"@type": ["Organization", "LocalBusiness"],
					"name": "Amplify Facilities Management",
					"url": "https://amplifyfm.com.au",
					"logo": "https://amplifyfm.com.au/assets/logo.png",
					"image": [
						"https://amplifyfm.com.au/building-management-sydney.jpg"
					],
					"description": "Amplify Facilities Management provides building management, commercial cleaning, landscaping, and security solutions across Sydney.",
					"areaServed": [
						"Sydney CBD",
						"Northern Beaches",
						"Eastern Suburbs",
						"Inner West",
						"Western Sydney",
						"South Sydney"
					],
					// "sameAs": [
					// 	"https://www.facebook.com/yourpage",
					// 	"https://www.linkedin.com/company/yourcompany"
					// ],
					"contactPoint": [
						{
							"@type": "ContactPoint",
							"contactType": "customer service",
							"telephone": "0450768657",
							"areaServed": "AU"
						}
					]
				},
				{
					"@type": "BreadcrumbList",
					"itemListElement": [
						{
							"@type": "ListItem",
							"position": 1,
							"name": "Home",
							"item": "https://amplifyfm.com.au/"
						},
						{
							"@type": "ListItem",
							"position": 2,
							"name": "About",
							"item": "https://amplifyfm.com.au/about-amplify-facilities-management-sydney"
						}
					]
				}
			]
		}
	</script>
	<SubHero
		title="About Amplify Facilities Management"
		subtitle="Sydney’s Trusted Facilities & Building Management Partner"
		text="At Amplify Facilities Management, we provide comprehensive facilities management services across Sydney, covering commercial and residential building management, cleaning, landscaping, and security solutions. Our team is committed to reliability, transparency, and quality, ensuring every property is safe, efficient, and well-presented while taking the stress out of management so owners, tenants, and managers can focus on what matters most."
	/>
	<AboutWho />
	<AboutWhy />
	<AboutAreas />
	<AboutContact />
</Layout>
